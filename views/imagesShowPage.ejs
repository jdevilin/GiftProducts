<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gift Craft to Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
<div class="container col-md-6""><h1>Image to Search</h1></div>

    <form action="/imgsearch" method="GET" id="form1">
        <div class="container col-md-6">
            <label for="email">Please enter to image search</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Title to search" name="name">
            <button onclick="clearImage()" class="btn btn-primary mt-3">Search Image</button>

        </div>
    </form>
<div data-target="#myCarousel" data-slide-to="4" class="container col-md-6">
    <% items.forEach(function(image) { %>

        <div class="container col-md-3">
            <img src="data:image/<%=image.img.contentType%>;base64,
					<%=image.img.data.toString('base64')%>" class="img-thumbnail">
            <div>
                <h5><%= image.name %></h5>


            </div>
        </div>

    <% }) %>
</div>
</body>

</html>